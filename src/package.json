{
  "private": true,
  "dependencies": {
    "modern-normalize": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3",
    "sass": "^1.97.1"
  },
  "scripts": {
    "sass": "sass --style=compressed --load-path=node_modules phorum/static/sass/screen.sass:phorum/static/css/screen.css && npm run postcss",
    "sass:compile": "sass --style=compressed --load-path=node_modules phorum/static/sass/screen.sass:phorum/static/css/screen.css",
    "sass:watch": "concurrently \"sass --watch --style=compressed --load-path=node_modules phorum/static/sass/screen.sass:phorum/static/css/screen.css\" \"postcss --watch phorum/static/css/screen.css -o phorum/static/css/screen.css --no-map\"",
    "postcss": "postcss phorum/static/css/screen.css -o phorum/static/css/screen.css --no-map"
  }
}
